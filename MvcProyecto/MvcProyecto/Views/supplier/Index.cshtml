@model IEnumerable<Proyecto.DataAccess.supplier>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:burlywood" class="well well-sm">Suppliers</h2>

<ul class="pager">
    <li class="next"> 
        @Html.ActionLink("Create New", "Create")
    </li>
</ul>
<br></br>
<div class="panel panel-warning">
    <div class="panel-heading">Existing Suppliers </div>  
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.legalIdentification_card)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.legalIdentification_card)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.account)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td class=" breadcrumb label label-danger">
                @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
                @Html.ActionLink("Details", "Details", new { id=item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.id })
            </td>
        </tr>
    }

    </table>
</div> 