@model MvcProyecto.Models.filtroProductModels
@{
    ViewBag.Title = "Product search according to their Category";
}

<h2>Product search according to their Category</h2>

@using (Html.BeginForm()) {     
    @Html.ValidationSummary(true)
    
    <div class="editor-field">
        @Html.EditorFor(model => model.SearchText)
    </div>
    <input type="submit" value="Buscar"/>
}

<table>
    <thead>
        <tr>
            <td style="font-weight:bold">
                Code
            </td>
            <td style="font-weight:bold">
               Family Product
            </td>
            <td style="font-weight:bold">
               Product Name
            </td>
            <td style="font-weight:bold">
               Unit Price
            </td>
            <td style="font-weight:bold">
               Expiration
            </td>
               <td style="font-weight:bold">
               Existence
            </td>
               <td style="font-weight:bold">
               Minimum
            </td>
               <td style="font-weight:bold">
               Supplier
            </td>
            <td style="font-weight:bold">
              

            </td>
        </tr>
    </thead>
    <tbody>
     @foreach(var item in Model.Product){
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.family_product.description)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.product_name)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.unit_price)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.expiration)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.existence)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.minimum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.supplier1.company)
            </td>
       
        </tr> 
    }
</table>