@model MvcProyecto.Models.filtroProductModels
@{
    <p class="btn btn-lg btn-primary "> 
    @Html.ActionLink("Create New", "Create")
</p>
    
    ViewBag.Title = "Product search according to their Category";
}

<h2 style="color:burlywood" class="well well-sm">Product search according to their Category</h2>

@using (Html.BeginForm()) {     
    @Html.ValidationSummary(true)
    
    <div class="editor-field">
        @Html.EditorFor(model => model.SearchText)
    </div>
    <input class="btn btn-lg btn-danger" type="submit" value="Buscar"/>
    <br></br>
}

 <div class="panel panel-warning">
      <div class="panel-heading">Existing Products </div>  
    
    <table class="table">
        <thead>
            <tr>
                <td style="font-weight:bold">
                    Code
                </td>
                <td style="font-weight:bold">
                   Family Product
                </td>
                <td style="font-weight:bold">
                   Product Name
                </td>
                <td style="font-weight:bold">
                   Unit Price
                </td>
                <td style="font-weight:bold">
                   Expiration
                </td>
                   <td style="font-weight:bold">
                   Existence
                </td>
                   <td style="font-weight:bold">
                   Minimum
                </td>
                   <td style="font-weight:bold">
                   Supplier
                </td>
                <td style="font-weight:bold">
              

                </td>
            </tr>
        </thead>
        <tbody>

         @foreach(var item in Model.Product){
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.family_product.description)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.product_name)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.unit_price)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.expiration)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.existence)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.minimum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.supplier1.company)
                </td>
             <td class=" breadcrumb label label-danger ">
                @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
                @Html.ActionLink("Details", "Details", new { id=item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.id })
            </td>
            </tr> 
        }
    </table>
</div>