<!DOCTYPE html>
<html lang="es">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Mi aplicación ASP.NET MVC</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Frutas Y verduras VyV", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                            <li>@Html.ActionLink("Product", "Index", "product")</li>
                            <li>@Html.ActionLink("Family Product", "Index", "family_product")</li>
                            <li>@Html.ActionLink("Employee", "Index", "employee")</li>
                            <li>@Html.ActionLink("Post Employee", "Index", "post")</li>
                             <li>@Html.ActionLink("Client", "Index", "client")</li>
                            <li>@Html.ActionLink("Supplier", "Index", "supplier")</li>
                            <li>@Html.ActionLink("Purchase Order", "Index", "purchaseOrder")</li>
                            <li>@Html.ActionLink("Detail Purchase Order", "Index", "detailPurchaseOrder")</li>
                             <li>@Html.ActionLink("Account Payable", "Index", "accounts_payable")</li>
                             <li>@Html.ActionLink("Bill", "Index", "bill")</li>
                            <li>@Html.ActionLink("Detail Bill", "Index", "detailBill")</li>
                            <li>@Html.ActionLink("Route", "Index", "route")</li>
                             <li>@Html.ActionLink("Filtro Product", "Index", "filtroProduct")</li>

                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Sale Point</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
