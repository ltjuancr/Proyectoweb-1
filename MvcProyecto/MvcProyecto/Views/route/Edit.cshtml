@model Proyecto.DataAccess.route

@{
    ViewBag.Title = "Edit";
}

<h2 style="color:burlywood" class="well well-sm">Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset class="alert alert-warning">
        <legend>route</legend>

        @Html.HiddenFor(model => model.id)

        <div class="label label-default" style="margin-right:360px; font-style:italic">
            @Html.LabelFor(model => model.origin)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.origin)
            @Html.ValidationMessageFor(model => model.origin)
        </div>

        <div class="label label-default" style="margin-right:330px; font-style:italic">
            @Html.LabelFor(model => model.destination)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.destination)
            @Html.ValidationMessageFor(model => model.destination)
        </div>

        <div class="label label-default" style="margin-right:330px; font-style:italic">
            @Html.LabelFor(model => model.description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.description)
            @Html.ValidationMessageFor(model => model.description)
        </div>

        <div class="label label-default" style="margin-right:350px; font-style:italic">
            @Html.LabelFor(model => model.address)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.address)
            @Html.ValidationMessageFor(model => model.address)
        </div>

        <div class="label label-default" style="margin-right:360px; font-style:italic">
            @Html.LabelFor(model => model.state)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.state)
            @Html.ValidationMessageFor(model => model.state)
        </div>

        <div class="label label-default" style="margin-right:310px; font-style:italic">
            @Html.LabelFor(model => model.requisition, "requisition1")
        </div>
        <div class="editor-field">
            @Html.DropDownList("requisition", String.Empty)
            @Html.ValidationMessageFor(model => model.requisition)
        </div>
         <br></br>
        <p>
            <input class="btn btn-lg btn-warning" type="submit" value="Save" />
        </p>
    </fieldset>
}

<div class="btn btn-sm btn-success">&larr;
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
