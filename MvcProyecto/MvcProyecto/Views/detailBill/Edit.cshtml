@model Proyecto.DataAccess.detailBill

@{
    ViewBag.Title = "Edit";
}

<h2 style="color:burlywood" class="well well-sm">Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset class="alert alert-warning">
        <legend>detailBill</legend>

        @Html.HiddenFor(model => model.id)

        <div class="label label-default" style="margin-right:330px; font-style:italic">
            @Html.LabelFor(model => model.bill, "bill1")
        </div>
        <div class="editor-field">
            @Html.DropDownList("bill", String.Empty)
            @Html.ValidationMessageFor(model => model.bill)
        </div>

        <div class="label label-default" style="margin-right:301px; font-style:italic">
            @Html.LabelFor(model => model.product, "product1")
        </div>
        <div class="editor-field">
            @Html.DropDownList("product", String.Empty)
            @Html.ValidationMessageFor(model => model.product)
        </div>

        <div class="label label-default" style="margin-right:310px; font-style:italic">
            @Html.LabelFor(model => model.amount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.amount)
            @Html.ValidationMessageFor(model => model.amount)
        </div>

        <div class="label label-default" style="margin-right:328px; font-style:italic">
            @Html.LabelFor(model => model.price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.price)
            @Html.ValidationMessageFor(model => model.price)
        </div>
        <br></br>
        <p>
            <input class="btn btn-lg btn-warning" type="submit" value="Save" />
        </p>
    </fieldset>
}

<div class="btn btn-sm btn-success">&larr;
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
